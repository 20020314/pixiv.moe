{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["kotori"],
  "globals": {
    "autobind": true
  },
  "rules": {
    "react/jsx-uses-react": 1,
    "react/jsx-boolean-value": 1,
    "react/no-string-refs": 1,
    "react/self-closing-comp": 1,
    "react/jsx-no-bind": [1, {
        "ignoreRefs": true,
        "allowArrowFunctions": true
    }],
    "react/jsx-uses-vars": 1,
    "new-cap": 0
  }
}
